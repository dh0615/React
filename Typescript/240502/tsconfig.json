{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "strict": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "downlevelIteration": true,
    "noImplicitAny": true, // any 허용하지 않겠다는 뜻
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitThis": false // this에 any줬을 때 에러 발생시키지 말라는 뜻
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}
